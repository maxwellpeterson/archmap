{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ESNext"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src"]
}
